{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "typeRoots": ["node_modules/@types"],  // Pinia and Vue will be auto-detected
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": [

    "src/**/*",
    "src/**/*.ts",
    "src/**/*.vue",
    "shims-vue.d.ts"
  ]
}
